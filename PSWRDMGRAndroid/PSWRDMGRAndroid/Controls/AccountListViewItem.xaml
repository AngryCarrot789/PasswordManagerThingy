<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidPSWRDMGR.Controls.AccountListViewItem">
    <ContentPage.Content>
        <Grid>
            <Label Text="{Binding AccountName}" 
               Margin="7,2,400,0" 
               VerticalOptions="Start" FontSize="20"/>
            <Label Text="{Binding Email}" 
               Margin="7,37,400,0" 
               VerticalOptions="Start" FontSize="15"/>
            <Button x:Uid="1" Text="Copy Username" Margin="0,10,264,10" FontSize="16" Clicked="Button_Clicked" HorizontalOptions="Start" Width="131"/>
            <Button x:Uid="2" Text="Copy Password" Margin="0,10,137,10" FontSize="16" Clicked="Button_Clicked" HorizontalOptions="Start" Width="125"/>
            <Button x:Uid="3" Text="Copy Email"    Margin="0,10,10,10" FontSize="16" Clicked="Button_Clicked" HorizontalOptions="Start" Width="125" />
        </Grid>
    </ContentPage.Content>
</ContentPage>