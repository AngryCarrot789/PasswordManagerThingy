<Window x:Class="PSWRDMGR.Views.SearchResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSWRDMGR.Views"
        xmlns:viewmodels="clr-namespace:PSWRDMGR.ViewModels" ResizeMode="NoResize"
        mc:Ignorable="d"  Closing="Window_Closing" KeyDown="Window_KeyDown" 
        Title="Search Results" Height="500" Width="800">
    <Window.DataContext>
        <viewmodels:SearchViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource ContainerBackground}">
        <ListBox ItemsSource="{Binding AccountsList, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Stretch" 
                 HorizontalContentAlignment="Stretch"
                 FontFamily="Segoe UI Light" Margin="10,10,10,65"/>
        <Button Content="Clear &amp; Close" VerticalAlignment="Bottom" Height="45" Click="Button_Click" FontSize="16" Margin="10,0,10,10"/>
    </Grid>
</Window>
