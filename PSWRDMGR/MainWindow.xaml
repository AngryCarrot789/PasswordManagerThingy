<Window x:Class="PSWRDMGR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSWRDMGR"
        xmlns:viewmodels="clr-namespace:PSWRDMGR.ViewModels"
        mc:Ignorable="d"
        Title="Password/Account Manager" Height="600" Width="1100" Background="{DynamicResource BackgroundColour}">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid HorizontalAlignment="Left" Width="232" Margin="0,60,0,0">
            <Border Background="{DynamicResource ContainerBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}" BorderThickness="0 0 1 0"/>
            <Button Command="{Binding ShowAddAccountWindowCommand}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,0" Height="60" FontFamily="Segoe UI Light" Background="{DynamicResource ControlDefaultBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}">
                <Grid Width="160">
                    <Image Source="Resources/Images/plus-64.ico" Height="32" Width="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Add Account" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
            <Button Command="{Binding ShowEditAccountWindowCommand}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,65,10,0" Height="60" FontFamily="Segoe UI Light" Background="{DynamicResource ControlDefaultBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}">
                <Grid Width="160">
                    <Image Source="Resources/Images/edit-11-64.ico" Height="32" Width="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Edit Account" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
            <Button Command="{Binding DeleteAccountCommand}" VerticalAlignment="Top" HorizontalAlignment="Stretch"  Margin="10,130,10,0" Height="60" FontFamily="Segoe UI Light" Background="{DynamicResource ControlDefaultBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}">
                <Grid Width="160">
                    <Image Source="Resources/Images/delete-2-64.ico" Height="32" Width="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Deleta Account" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
            <Button Command="{Binding SaveAccountCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="10,0,10,10" Height="60" FontFamily="Segoe UI Light" Background="{DynamicResource ControlDefaultBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}">
                <Grid Width="160">
                    <Image Source="Resources/Images/save-128.ico" Height="32" Width="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Save Accounts" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
            <Button Command="{Binding LoadAccountCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="10,0,10,75" Height="60" FontFamily="Segoe UI Light" Background="{DynamicResource ControlDefaultBackground}" BorderBrush="{DynamicResource ControlDefaultBorderBrush}">
                <Grid Width="160">
                    <Image Source="Resources/Images/download-128.ico" Height="32" Width="32" HorizontalAlignment="Left"/>
                    <TextBlock Text="Load Accounts" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
        </Grid>
        <Grid Background="{DynamicResource ContainerBackground}" Height="60" VerticalAlignment="Top">
            <Border BorderBrush="{DynamicResource ControlDefaultBorderBrush}" BorderThickness="0 0 0 1" Margin="231,0,0,0"/>
            <Grid>
                <Grid HorizontalAlignment="Left" Width="250">
                    <TextBlock Text="ToolBox" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Segoe UI Light"/>
                </Grid>
                <Grid Margin="250,0,0,0">
                    <TextBlock Text="Accounts List" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Segoe UI Light"/>
                </Grid>
            </Grid>
        </Grid>
        <ListBox ItemsSource="{Binding AccountsList, UpdateSourceTrigger=PropertyChanged}"
                 SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}" Margin="232,60,0,0" FontFamily="Segoe UI Light" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
